{
  "name": "mapbasic-lang",
  "publisher": "JeremyCrain",
  "author": {
    "name": "Jeremy Crain",
    "email": "jtaylor0407@gmail.com",
    "url": "https://github.com/TaylorJC"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/TaylorJC/mapbasic-lang"
  },
  "displayName": "MapBasic",
  "description": "Syntax highlighting and snippets for the MapBasic language",
  "version": "1.2.0",
  "icon": "./MapBasicLangIcon.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets"
  ],
  "configurationDefaults": {
    "[languageId]": {
      "editor.semanticHighlighting.enabled": true
    }
  },
  "contributes": {
    "languages": [
      {
        "id": "mapbasic",
        "aliases": [
          "MapBasic",
          "mapbasic"
        ],
        "extensions": [
          ".mb",
          ".def",
          ".mbp"
        ],
        "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "mapbasic",
        "scopeName": "source.mapbasic",
        "path": "./syntaxes/mapbasic.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "id": "mapbasic",
        "language": "mapbasic",
        "path": "./snippets/mapbasic.json"
      }
    ]
  }
}
