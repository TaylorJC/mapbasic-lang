{
  "name": "mapbasic-lang",
  "publisher": "JCrain",
  "repository": "https://github.com/TaylorJC/mapbasic-lang",
  "displayName": "MapBasic Lang",
  "description": "Syntax highlighting for MapBasic",
  "version": "0.0.3",
  "icon": "./MapBasicLangIcon.png",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Programming Languages", "Snippets"
  ],
  "contributes": {
    "languages": [
      {
      "id": "mapbasic",
      "aliases": ["MapBasic", "mapbasic"],
      "extensions": [".mb",".def",".mbp"],
      "configuration": "./language/language-configuration.json"
      }
    ],
    "grammars": [
      {
      "language": "mapbasic",
      "scopeName": "source.mapbasic",
      "path": "./syntaxes/mapbasic.tmLanguage.json"
      }
    ],
    "themes": [
      {
        "label": "mapbasic-syntactic-theming",
        "id": "mapbasic-color-theme",
        "uiTheme": "vs-dark",
        "path": "./themes/mapbasic.tmTheme"
      }  
    ],
    "snippets": [
      {
        "id": "mapbasic",
        "language": "mapbasic",
        "path": "./snippets/mapbasic.json"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "mapbasicLang.build",
          "when": "editorLangId == mapbasic"
        }
      ]
    },
    "commands": [
      {
        "command": "mapbasicLang.build",
        "title": "Compile"
      }
    ]
  }
}
